@using LuxyboxIdentity.Models;
@using System.Linq;
@{
    ViewBag.Title = "Cart";
}
@model LuxyboxIdentity.Data.Cart
<div class="container">
    <header class="group">
        <h1 class="cart-title">SEPETİM</h1>
    </header>
    <div class="product-list">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-6 column-title">Ürün Adı</div>
            <div class="col-md-2 column-title text-right">Adet</div>
            <div class="col-md-2 column-title text-right">Fiyat</div>
        </div>


        @foreach (var item in Model.CartItems)
        {
            <div class="row product-item">
                <div class="col-md-2"><img class="product-image" src="@item.Product.ImgUrl" /></div>
                <div class="col-md-6 product-name">
                    <a href="/Home/Details/@item.Product.Id">@item.Product.Name</a>
                </div>
                <div class="col-md-2 text-center">
                    <button id="btnDecrease" type="button" class="btn btn-default">-</button>
                    <input id="inputPrice" type="text" class="form-control product-price" value="1">
                    <button id="btnIncrease" type="button" class="btn btn-default">+</button>
                </div>
                <div class="col-md-2 text-right">@item.Product.Price</div>

            </div>
        }

    </div>


    <div class="total-price">
        <span class="title total-price-block">SİPARİŞ ÖZETİ</span>
        <div class="total-price-block">

            <div class="author">
                <b>Toplam Fiyat:</b>
                <span>@Model.CartItems.Select(q => q.Product.Price.Value).Sum()</span>
            </div>

        </div>
        <button onclick="('').val(), $('').val();" class="btntext-center total-price-block" id="addCartBtn">
            @Html.ActionLink("Alışverişi Tamamla", "CheckOrder", "Home")
        </button>
        <button onclick="('').val(), $('').val();" class="btntext-center total-price-block" id="addCartBtn">
            @Html.ActionLink("Sepeti Boşalt", "Delete", new { id = 0 })
        </button>
    </div>
    <div class="clearfix">

    </div>

</div>






